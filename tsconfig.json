{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist",      // Output directory for compiled JS
    "rootDir": "./src",      // Directory where your TypeScript files are located
    "esModuleInterop": true, // For importing ES6 modules
    "strict": true           // Enable strict type checking
  },
  "include": [
    "src/**/*.ts"            // Include all .ts files in the 'src' directory
  ],
  "exclude": [
    "node_modules"           // Exclude the node_modules folder
  ]
}
